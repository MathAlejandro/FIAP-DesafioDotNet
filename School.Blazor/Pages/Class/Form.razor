@using School.Blazor.DTO;


<EditForm Model="@turma" OnValidSubmit="@OnValidSubmit">
    @if (createForm)
    {
        <FluentValidator TValidator="ClassValidator" />
    }
    <div class="row">
        <div class="col form-group">
            <label>Nome: </label>
            <div>
                <InputText @bind-Value="@turma.Class" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => turma.Class)" />
            </div>
        </div>
        <div class="col form-group"></div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label>Curso: </label>
            <div>
                <InputNumber @bind-Value="@turma.CourseId" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => turma.CourseId)" />
            </div>
        </div>
        <div class="col form-group"></div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label>Ano: </label>
            <div>
                <InputNumber @bind-Value="@turma.Year" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => turma.Year)" />
            </div>
        </div>
        <div class="col form-group"></div>
    </div>

    <div class="row">
        <div class="col form-group">
            <label>Ativo: </label>
            <div>
                <InputCheckbox @bind-Value="@turma.Active" class="">Ativo: </InputCheckbox>
                <ValidationMessage For="@(() => turma.Active)" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col form-group">
            <button class="btn btn-primary">
                @ButtonText
            </button>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public ClassDTO turma { get; set; }

    [Parameter]
    public bool createForm { get; set; }

    [Parameter]
    public string ButtonText { get; set; } = "Salvar";

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}